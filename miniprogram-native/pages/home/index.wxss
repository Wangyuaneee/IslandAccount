.container{padding:12px}
.nav{display:flex;gap:12px;margin-bottom:12px}
.nav-link{color:#2563eb}
.section{margin-bottom:12px}
.title{font-size:18px;font-weight:700;color:#111827}
.subtitle{font-size:14px;color:#6b7280}
.panel{background:#fff;border:1px solid #e5e7eb;border-radius:8px;margin-bottom:12px;padding:12px}
.panel-title{font-weight:700;color:#374151;margin-bottom:8px}
.row{display:flex;gap:8px;margin-bottom:8px}
.between{justify-content:space-between;align-items:center}
.btn{padding:8px 12px;border:1px solid #d1d5db;border-radius:6px;background:#f3f4f6}
.primary{background:#3b82f6;color:#fff;border-color:#3b82f6}
.warn{background:#f59e0b;color:#fff;border-color:#f59e0b}
.danger{background:#ef4444;color:#fff;border-color:#ef4444}
.sizes{display:flex;flex-wrap:wrap;gap:6px;margin-bottom:8px}
.grid{display:grid;gap:4px;background:#f9fafb;border:1px solid #e5e7eb;border-radius:8px;padding:8px}
.cell{width:28px;height:28px;border:1px solid #d1d5db;border-radius:4px;display:flex;align-items:center;justify-content:center}
.cell-text{font-size:12px;color:#fff}
.ocean{background:#dbeafe}
.land{background:#22c55e}
.visited{background:#86efac}
.current{background:#fb923c;border:2px solid #ea580c}
.legend{display:flex;gap:12px;margin-top:8px;flex-wrap:wrap}
.legend-item{display:flex;gap:6px;align-items:center}
.legend-sample{width:12px;height:12px;border:1px solid #d1d5db;border-radius:2px}
.legend-sample.ocean{background:#dbeafe}
.legend-sample.land{background:#22c55e}
.legend-sample.visited{background:#86efac}
.legend-sample.current{background:#fb923c;border:2px solid #ea580c}
.step{text-align:left;font-size:12px;color:#1f2937}
