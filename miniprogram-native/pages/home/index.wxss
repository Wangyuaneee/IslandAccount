.header{background:#ffffff;border-bottom:1px solid #e5e7eb;box-shadow:0 1px 2px rgba(0,0,0,0.04);position:sticky;top:0;z-index:10}
.header-inner{max-width:960px;margin:0 auto;height:56px;display:flex;align-items:center;justify-content:space-between;padding:0 16px}
.logo{width:32px;height:32px;background:#3b82f6;border-radius:8px;display:flex;align-items:center;justify-content:center;box-shadow:0 4px 10px rgba(59,130,246,.25)}
.logo-text{color:#fff;font-weight:700;font-size:12px}
.header-title{font-size:18px;font-weight:700;color:#111827;margin-left:8px;flex:1;letter-spacing:.5px}
.header-nav{display:flex;gap:12px}
.nav-link{color:#2563eb;font-weight:600}
.container{max-width:960px;margin:0 auto;padding:16px}
.section{margin-bottom:12px}
.title{font-size:20px;font-weight:800;color:#0f172a}
.subtitle{font-size:14px;color:#64748b}
.panel{background:#fff;border:1px solid #e5e7eb;border-radius:14px;margin-bottom:16px;padding:14px;box-shadow:0 6px 14px rgba(2,6,23,.06)}
.panel-title{font-weight:700;color:#374151;margin-bottom:8px}
.row{display:flex;gap:10px;margin-bottom:10px}
.control-group{align-items:center}
.group-label{font-size:12px;color:#64748b;margin-right:8px}
.chip{padding:4px 8px;border:1px solid #e5e7eb;border-radius:9999px;background:#f8fafc;color:#334155;font-size:12px}
.between{justify-content:space-between;align-items:center}
.btn{padding:10px 14px;border:1px solid #d1d5db;border-radius:10px;background:#f3f4f6;box-shadow:0 2px 6px rgba(2,6,23,.06);transition:transform .08s ease,opacity .08s ease}
.btn-sm{padding:6px 10px;font-size:12px;border-radius:8px}
.btn:active{transform:scale(0.98);opacity:.9}
.btn[disabled]{opacity:.5}
.primary{background:#3b82f6;color:#fff;border-color:#3b82f6;box-shadow:0 6px 14px rgba(59,130,246,.25)}
.warn{background:#f59e0b;color:#fff;border-color:#f59e0b;box-shadow:0 6px 14px rgba(245,158,11,.25)}
.danger{background:#ef4444;color:#fff;border-color:#ef4444;box-shadow:0 6px 14px rgba(239,68,68,.25)}
.selected{background:#10b981;color:#fff;border-color:#10b981}
.sizes{display:flex;flex-wrap:wrap;gap:8px;margin-bottom:10px}
.grid{display:grid;gap:8px;background:#f8fafc;border:1px solid #e5e7eb;border-radius:14px;padding:12px;justify-content:center}
.cell{width:32px;height:32px;border:1px solid #d1d5db;border-radius:6px;display:flex;align-items:center;justify-content:center;transition:transform .08s ease}
.cell-text{font-size:12px;color:#fff}
.ocean{background:#dbeafe}
.land{background:#22c55e}
.visited{background:#86efac}
.current{background:#fb923c;border:2px solid #ea580c}
.legend{display:flex;gap:12px;margin-top:8px;flex-wrap:wrap}
.legend-item{display:flex;gap:6px;align-items:center}
.legend-sample{width:12px;height:12px;border:1px solid #d1d5db;border-radius:2px}
.legend-sample.ocean{background:#dbeafe}
.legend-sample.land{background:#22c55e}
.legend-sample.visited{background:#86efac}
.legend-sample.current{background:#fb923c;border:2px solid #ea580c}
.step{text-align:left;font-size:12px;color:#1f2937}
.progress{width:100%;height:12px;background:#e5e7eb;border-radius:9999px;overflow:hidden}
.progress-bar{height:100%;background:linear-gradient(90deg,#3b82f6,#22c55e);box-shadow:inset 0 0 6px rgba(2,6,23,.12)}
.metrics{display:grid;grid-template-columns:repeat(3,1fr);gap:8px;margin:8px 0}
.metric{background:#ffffff;border:1px solid #e5e7eb;border-radius:12px;padding:10px;text-align:center;box-shadow:0 4px 12px rgba(2,6,23,.06)}
.metric .label{font-size:12px;color:#6b7280}
.metric .value{font-size:14px;font-weight:700;color:#1f2937}
